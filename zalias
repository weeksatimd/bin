# Aliases for ZSH
# JRW 06/12/11
#
# don't correct the arguments of mkdir--by design they don't already exist
alias mkdir='nocorrect mkdir'

# add color to ls
alias ls='ls -G'
# ls with all, long, humanly readable sizes, and color
alias la='ls -AlhG'
# like la but not including hidden files
alias ll='ls -lhG'
# show me my dotfiles
alias ldot='ls -AdhG .*'
# sort by date
alias lt='ls -lthG'

# Path aliases
temp=~/Dropbox/Temp

alias vols='cd /Volumes; ls -G'

# Git aliases
alias gsub='git submodule add ';w

